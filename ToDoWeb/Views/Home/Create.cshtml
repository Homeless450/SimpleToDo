@model Goal

<form method="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Create New Goal</h2>
        <hr />
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="EndDay" class="p-0"></label>
        <input asp-for="EndDay" class="form-control" />
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Create</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border form-control">Cancel</a>
        </div>

    </div>
</form>
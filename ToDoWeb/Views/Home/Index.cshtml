@model IEnumerable<Goal>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Goals</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Goal" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"> Create New Goal</i>
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Status</th>
            <th>User</th>
            <th>Goal</th>
            <th>End Date</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @if (@obj.Completed)
                    {
                        <i class="bi bi-check2-square"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-square"></i>
                    }
                </td>
                <td>@obj.UserId</td>
                <td>@obj.Name</td>
                <td>@obj.EndDay</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Goal" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>
                        <a asp-controller="Goal" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>